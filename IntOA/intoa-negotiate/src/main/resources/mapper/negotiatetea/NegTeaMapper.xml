<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.intoa.negotiate.mapper.NegTeaMapper">
    
    <resultMap type="NegTea" id="NegTeaResult">
        <result property="teaId"    column="tea_id"    />
        <result property="teaName"    column="tea_name"    />
        <result property="category"    column="category"    />
        <result property="stockQuantity"    column="stock_quantity"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectNegTeaVo">
        select tea_id, tea_name, category, stock_quantity, status, create_by, create_time, update_by, update_time, remark from oa_neg_tea
    </sql>

    <select id="selectNegTeaList" parameterType="NegTea" resultMap="NegTeaResult">
        <include refid="selectNegTeaVo"/>
        <where>  
            <if test="teaName != null  and teaName != ''"> and tea_name like concat('%', #{teaName}, '%')</if>
            <if test="stockQuantity != null "> and stock_quantity = #{stockQuantity}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectNegTeaByTeaId" parameterType="Long" resultMap="NegTeaResult">
        <include refid="selectNegTeaVo"/>
        where tea_id = #{teaId}
    </select>

    <insert id="insertNegTea" parameterType="NegTea" useGeneratedKeys="true" keyProperty="teaId">
        insert into oa_neg_tea
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="teaName != null and teaName != ''">tea_name,</if>
            <if test="category != null">category,</if>
            <if test="stockQuantity != null">stock_quantity,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="teaName != null and teaName != ''">#{teaName},</if>
            <if test="category != null">#{category},</if>
            <if test="stockQuantity != null">#{stockQuantity},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateNegTea" parameterType="NegTea">
        update oa_neg_tea
        <trim prefix="SET" suffixOverrides=",">
            <if test="teaName != null and teaName != ''">tea_name = #{teaName},</if>
            <if test="category != null">category = #{category},</if>
            <if test="stockQuantity != null">stock_quantity = #{stockQuantity},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where tea_id = #{teaId}
    </update>

    <delete id="deleteNegTeaByTeaId" parameterType="Long">
        delete from oa_neg_tea where tea_id = #{teaId}
    </delete>

    <delete id="deleteNegTeaByTeaIds" parameterType="String">
        delete from oa_neg_tea where tea_id in 
        <foreach item="teaId" collection="array" open="(" separator="," close=")">
            #{teaId}
        </foreach>
    </delete>
</mapper>